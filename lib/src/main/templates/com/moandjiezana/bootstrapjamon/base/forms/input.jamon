<%args>
String label;
String name;
String type = "text";
String id = "";
String value = "";
String classes = "";
States state = States.NONE;
String helpInline = "";
String helpBlock = "";
</%args>
<&| controlGroup; label=label; forId=id; state=state; helpInline=helpInline; helpBlock=helpBlock &>
    <input type="<% type %>" id="<% id %>" class="<%if !classes.isEmpty() %><% classes %></%if>" name="<% name %>" value="<% value %>"/>
</&>